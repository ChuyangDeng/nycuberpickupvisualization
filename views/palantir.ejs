<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8">
    <meta name="viewport" content="initial-scale=1, maximum-scale=1, user-scalable=no">
    <title><%=title%></title>
    <link rel="stylesheet" href="https://js.arcgis.com/3.18/dijit/themes/claro/claro.css">
    <link rel="stylesheet" href="https://js.arcgis.com/3.18/esri/css/esri.css">
    <link href="stylesheets/style.css" rel="stylesheet">
    <script src="https://js.arcgis.com/3.18/"></script>
    <script>
        var map, csv;
        require([
            "esri/map",
            "esri/layers/CSVLayer",
            "esri/Color",
            "esri/symbols/SimpleMarkerSymbol",
            "esri/renderers/SimpleRenderer",
            "esri/InfoTemplate",
            "dojo/domReady!"
        ], function(
            Map, CSVLayer, Color, SimpleMarkerSymbol, SimpleRenderer, InfoTemplate
        ) {
            map = new Map("map", {
                basemap: "dark-gray",
                center: [-74.0068, 40.7400],
                zoom: 17
            });
            csv = new CSVLayer("datasets/palantir.csv");
            var orangeRed = new Color([238, 69, 0, 0.5]);
            var marker = new SimpleMarkerSymbol("solid", 5, null, orangeRed);
            var renderer = new SimpleRenderer(marker);
            csv.setRenderer(renderer);
            var template = new InfoTemplate("${type}", "${place}");
            csv.setInfoTemplate(template);
            map.addLayer(csv);
        });
    </script>
</head>
<body class="claro">
<div id="map">
    <a href="/" class="button">Monday</a>
    <a href="/palantir" class="button">Palantir</a>
</div>
</body>
<style>
    html, body, #map {
        height: 100%;
        padding: 0;
        margin: 0;
    }
</style>
</html>