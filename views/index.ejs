  <script src="https://js.arcgis.com/3.18/"></script>
  <script>
      var map, csv;
      require([
          "esri/map",
          "esri/layers/CSVLayer",
          "esri/Color",
          "esri/symbols/SimpleMarkerSymbol",
          "esri/renderers/SimpleRenderer",
          "esri/InfoTemplate",
          "dojo/domReady!"
      ], function(
          Map, CSVLayer, Color, SimpleMarkerSymbol, SimpleRenderer, InfoTemplate
      ) {
          map = new Map("map", {
              basemap: "dark-gray",
              center: [-74.0068, 40.7414],
              zoom: 12
          });
          csv = new CSVLayer("datasets/monday.csv");
          var orangeRed = new Color([238, 69, 0, 0.5]);
          var marker = new SimpleMarkerSymbol("solid", 5, null, orangeRed);
          var renderer = new SimpleRenderer(marker);
          csv.setRenderer(renderer);
          var template = new InfoTemplate("${type}", "${place}");
          csv.setInfoTemplate(template);
          map.addLayer(csv);
      });
  </script>
</head>


